apply plugin: 'application'
apply plugin: 'java'

sourceSets {
    main {
        java {
            srcDir '@CMAKE_CURRENT_SOURCE_DIR@'
        }
    }
}

mainClassName = 'JavaDemo'


repositories {
    mavenCentral()
}
dependencies {
    compile group: 'commons-logging', name: 'commons-logging', version: '1.2'
    compile group: 'net.java.dev.jna', name: 'jna', version: '4.1.0'

    compile fileTree(dir: '@PROJECT_BINARY_DIR@/@CMAKE_INSTALL_LIBDIR@', include: ['tigl-@TIGL_VERSION@.jar'])
}

run {
    args += '@PROJECT_SOURCE_DIR@/tests/TestData/simpletest.cpacs.xml'
    classpath  'java.library.path','@LIBRARY_INSTALL_PATH@'
}

